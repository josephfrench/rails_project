<div class="product-reviews">
    <% @comments.order({ created_at: :desc }).each do |comment| %>
        <div class="row">
            <hr>
            <p class="p-comment"><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p class="p-comment"><div class="rated p-comment" data-score="<%= comment.rating %>"></div></p>
            <p class="p-comment"><%= comment.body %></p>
        </div>
    <% end %>
</div>