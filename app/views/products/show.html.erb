<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>Business Solutions</h2>

  <div class="row" id="products">
    <div class="col-xs-12 col-md-6" id="product-box">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
      <p>
        <strong>Image url:</strong>
          <%= @product.image_url %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>
  </div>  
</div>  


