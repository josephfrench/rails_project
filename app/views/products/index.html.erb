<p id="notice"><%= notice %></p><br>

<h1 class="products-header">Products</h1>

<div class="container products-container">
  <div class="row" id="products-row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-md-4">
        <div class="product-box">
          <p><%= image_tag(product.image_url, class: "img-responsive") %></p>
          <p><h3><%= product.name %></h3></p>
          <p><%= product.description %></p>
          <p><strong>$<%= product.price %></strong></p>
          <p><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div><!--end products-box-->
      </div><!--end products-col-->
    <% end %>
  </div>  <!--end products-row-->
</div><!--end products-container-->


<div class="container product-controller">
  <p><%= link_to 'New Product', new_product_path %></p>
</div>


