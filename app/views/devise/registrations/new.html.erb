<h2>Register</h2><br />

<div class="container-devise">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
    </div>

    <div class="actions">
      <%= f.submit "Register", class: "btn btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>